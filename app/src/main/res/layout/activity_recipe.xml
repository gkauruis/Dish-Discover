<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stepsnav"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".RecipeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="#C9F4F1EF"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="textStart"
        app:title="Dish Discover"
        app:titleTextColor="@color/black"
        app:navigationIcon="@drawable/ic_back_black"/>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/recipeNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="georgia"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <!-- Add a separator or divider between recipe name and ingredients -->
    <TextView
        android:id="@+id/ingredientsLabelTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="georgia"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:paddingBottom="20dp"
        android:background="@color/black" />

    <!-- TextView to display the "Ingredients" label -->

    <!-- Use a RecyclerView or a LinearLayout to dynamically display ingredients -->

    <ListView
        android:id="@+id/ingredientsListView"
        android:layout_width="match_parent"
        android:layout_height="543dp"
        android:paddingTop="15dp">

    </ListView>
    <Button
        android:id="@+id/stepsview"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:text="Steps" />

</LinearLayout>
