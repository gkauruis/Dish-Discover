<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stepsnav"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".RecipeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="#C9F4F1EF"
        android:clickable="false"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="textStart"
        android:theme="?attr/actionBarTheme"
        app:title="Dish Discover"
        app:titleTextColor="@color/black"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="-1dp" />

    <TextView
        android:id="@+id/recipeNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="georgia"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <!-- Add a separator or divider between recipe name and ingredients -->
    <TextView
        android:id="@+id/ingredientsLabelTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="georgia"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />

    <!-- TextView to display the "Ingredients" label -->

    <!-- Use a RecyclerView or a LinearLayout to dynamically display ingredients -->

    <TextView
        android:id="@+id/RecipeInsruction"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:text="Previous" />

        <Button
            android:id="@+id/Recipe"
            android:layout_width="121dp"
            android:layout_height="66dp"
            android:text="Recipe" />

        <Button
            android:id="@+id/Next"
            android:layout_width="139dp"
            android:layout_height="63dp"
            android:text="Next" />
    </LinearLayout>

</LinearLayout>
